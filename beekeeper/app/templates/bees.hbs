<div class="row">
    {{#if bees}}
        {{#each bees}}
            <section class="col-md-4">
                <div class="panel panel-default">
                    <header class="panel-heading">
                        <h1 class="panel-title">{{name}}</h1>
                    </header>
                    <div class="panel-body">
                        <code>{{class}}</code>
                        <p>{{description}}</p>
                    </div>
                </div>
            </section>
        {{/each}}
    {{else}}
        <p class="well">No bees in use.</p>
    {{/if}}
</div>